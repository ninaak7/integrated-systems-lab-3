@model IntegratedSystems.Domain.Domain_Models.Patient

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Patient Details</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Embg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Embg)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
@if (Model.VaccinationSchedule != null && Model.VaccinationSchedule.Any())
{
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Center</th>
                    <th>Date Taken</th>
                    <th>Certificate</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                    foreach (var item in Model.VaccinationSchedule)
                    {
                        <tr>
                            <td>@(i += 1)</td>
                            <td>@Html.DisplayFor(modelItem => item.Center.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateTaken)</td>
                            <td>@Html.DisplayFor(modelItem => item.Certificate)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>
        <p>No vaccination schedule found.</p>
    </div>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn">Back to List</a>
</div>
