@model IntegratedSystems.Domain.Domain_Models.VaccinationCenter

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vaccination Center Details</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaxCapacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>
    </dl>
</div>
@if (Model.Vaccines != null && Model.Vaccines.Any())
{
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date Taken</th>
                    <th>Center</th>
                    <th>Certificate</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                    foreach (var item in Model.Vaccines)
                    {
                        <tr>
                            <td>
                                @{
                                    i = i + 1;
                                    <p>@i</p>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.PatientFor.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.PatientFor.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.DateTaken)</td>
                            <td>@Html.DisplayFor(modelItem => item.Center.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Certificate)</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>
        <p>No vaccination schedule found.</p>
    </div>
}
<div>
    <a asp-action="ScheduleVaccination" asp-route-id="@Model?.Id" class="btn btn-success">Add Vaccined Patient</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn">Back to List</a>
</div>
