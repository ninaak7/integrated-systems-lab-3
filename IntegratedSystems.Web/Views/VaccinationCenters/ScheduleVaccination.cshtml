@model IntegratedSystems.Domain.Domain_Models.Vaccine

@{
    ViewData["Title"] = "Schedule Vaccination";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Schedule A Vaccination</h1>
<hr />
<div class="container">
    <form method="post" asp-action="ScheduleVaccination" asp-controller="VaccinationCenters">
        <input type="hidden" name="centerId" value="@Model.VaccinationCenter" />

        <div class="form-group">
            <label asp-for="Manufacturer" class="control-label">Manufacturer:</label>
            <input type="text" class="form-control" name="manufacturer" value="@Model.Manufacturer" />
        </div>

        <div class="form-group">
            <label asp-for="DateTaken" class="control-label">Date Taken:</label>
            <input asp-for="DateTaken" class="form-control" value="@Model.DateTaken" />
            <span asp-validation-for="DateTaken" class="text-danger"></span>
        </div>

        <div class="form-group">
            @Html.Label("Patient")
            @Html.DropDownList("patientId", ViewBag.PatientList as IEnumerable<SelectListItem>, " ", new { @class = "form-control" })
        </div>

        <br />
        <button type="submit" class="btn btn-success">Schedule</button>
    </form>
</div>
